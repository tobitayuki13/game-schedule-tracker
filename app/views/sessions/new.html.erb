<h1>ログイン</h1>

<%= form_with url: login_path, local: true do %>
  <div>
    <%= label_tag :email, "メールアドレス" %><br>
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password, "パスワード" %><br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "ログイン" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<div class="w-full rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
  <div class="mb-6">
    <h1 class="text-2xl font-semibold tracking-tight">アカウント作成</h1>
    <p class="mt-2 text-sm text-slate-600">メールアドレスとパスワードを入力してください。</p>
  </div>

  <% if @user.errors.any? %>
    <div class="mb-5 rounded-xl border border-red-200 bg-white p-4 text-sm text-red-700">
      入力内容を確認してください。
    </div>
  <% end %>

  <%= form_with model: @user, url: signup_path, class: "space-y-5" do |f| %>
    <div>
      <%= f.label :email, "メールアドレス", class: "mb-1 block text-sm font-medium text-slate-700" %>
      <%= f.email_field :email,
        class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm focus:border-slate-900 focus:outline-none",
        autocomplete: "email" %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "mb-1 block text-sm font-medium text-slate-700" %>
      <%= f.password_field :password,
        class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm focus:border-slate-900 focus:outline-none",
        autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "パスワード（確認）", class: "mb-1 block text-sm font-medium text-slate-700" %>
      <%= f.password_field :password_confirmation,
        class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm focus:border-slate-900 focus:outline-none",
        autocomplete: "new-password" %>
    </div>

    <%= f.submit "登録する",
      class: "w-full rounded-lg bg-slate-900 px-4 py-2.5 text-sm font-semibold text-white hover:bg-slate-800" %>
  <% end %>

  <div class="mt-6 border-t pt-5 text-sm text-slate-600">
    <%= link_to "ログインはこちら", login_path, class: "font-medium text-slate-900 hover:underline" %>
  </div>
</div>

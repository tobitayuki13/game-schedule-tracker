<div class="space-y-6">
  <!-- ヘッダー -->
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold tracking-tight">ルーティン一覧</h1>

    <%= link_to "新規作成", new_routine_path,
      class: "inline-flex items-center rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
  </div>

  <!-- 一覧 -->
  <% if @routines.any? %>
    <div class="grid gap-4 sm:grid-cols-2">
      <% @routines.each do |routine| %>
        <%= link_to routine_path(routine),
          class: "block rounded-xl border border-slate-200 bg-white p-5 shadow-sm hover:border-slate-300 hover:shadow" do %>

          <div class="text-lg font-medium text-slate-900">
            <%= routine.name %>
          </div>

          <div class="mt-2 text-sm text-slate-600">
            詳細を見る
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-white p-8 text-center text-slate-600">
      まだルーティンがありません。
    </div>
  <% end %>
</div>

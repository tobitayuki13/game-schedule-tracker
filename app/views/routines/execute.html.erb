<div class="space-y-6">
  <!-- タイトル -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight"><%= @routine.name %> 実行</h1>
      <p class="mt-2 text-sm text-slate-600">次のタスクを進めていきます。</p>
    </div>

    <div class="flex flex-wrap gap-2">
      <%= link_to "詳細へ戻る", routine_path(@routine),
        class: "inline-flex items-center rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-slate-50" %>
    </div>
  </div>

  <% if @task.present? %>
    <!-- 次のタスク -->
    <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
      <div class="text-sm font-medium text-slate-600">次のタスク</div>

      <div class="mt-3 flex items-start gap-3">
        <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-100 text-sm font-semibold text-slate-700">
          <%= @task.position %>
        </span>

        <div class="min-w-0">
          <h2 class="text-2xl font-semibold text-slate-900">
            <%= @task.name %>
          </h2>

          <div class="mt-3">
            <% if @task.not_started? %>
              <%= button_to "開始", start_task_path(@task), method: :patch,
                form_class: "inline",
                class: "w-full sm:w-auto rounded-lg bg-emerald-600 px-5 py-3 text-sm font-semibold text-white hover:bg-emerald-500" %>
            <% elsif @task.in_progress? %>
              <%= button_to "終了", finish_task_path(@task), method: :patch,
                form_class: "inline",
                class: "w-full sm:w-auto rounded-lg bg-red-600 px-5 py-3 text-sm font-semibold text-white hover:bg-red-500" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- 完了 -->
    <div class="rounded-2xl border border-slate-200 bg-white p-8 text-center shadow-sm">
      <div class="text-lg font-semibold text-slate-900">すべて完了しました</div>
      <p class="mt-2 text-sm text-slate-600">おつかれさまでした!</p>

      <div class="mt-6">
        <%= link_to "ルーティン詳細へ戻る", routine_path(@routine),
          class: "inline-flex items-center rounded-lg bg-slate-900 px-5 py-3 text-sm font-semibold text-white hover:bg-slate-800" %>
      </div>
    </div>
  <% end %>
</div>

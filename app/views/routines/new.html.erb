<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold tracking-tight">ルーティン新規作成</h1>

    <%= link_to "一覧へ戻る", routines_path,
      class: "text-sm font-medium text-slate-600 hover:text-slate-900" %>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <% if @routine.errors.any? %>
      <div class="rounded-xl border border-red-200 bg-white p-4 text-sm text-red-700 mb-4">
        ルーティン名を入力してください。
      </div>
    <% end %>
    <%= form_with model: @routine, class: "space-y-5" do |f| %>
      <div>
        <%= f.label :name, "ルーティン名",
          class: "mb-1 block text-sm font-medium text-slate-700" %>

        <%= f.text_field :name,
          class: "w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm focus:border-slate-900 focus:outline-none",
          placeholder: "例：朝のルーティン" %>
      </div>

      <div class="flex items-center gap-3">
        <%= f.submit "作成",
          class: "inline-flex items-center rounded-lg bg-slate-900 px-5 py-2.5 text-sm font-semibold text-white hover:bg-slate-800" %>

        <%= link_to "キャンセル", routines_path,
          class: "text-sm font-medium text-slate-600 hover:text-slate-900" %>
      </div>
    <% end %>
  </div>
</div>
